<% title @user.username %>
<% stylesheet "user" %>

<div id="container">
  <div id="profile">
    <%= avatar_image_tag(@user) %>
    <h2 class="username"><%= @user.username %></h2>
    <div class="clear"></div>
    <div class="details">
      <p>
        Currently: <%= @user.online? ? "Online" : "Offline" %>
      </p>
      <% if @user.rank.present? %>
      <p>
        Go Rank: <%= @user.rank %>
      </p>
      <% end %>
      <p>
        GNU Go Auto-level:
        <%= @user.gnugo_level %>
      </p>
      <p>
        Games with GNU Go:
        <%= @user.games.with_gnugo.size %>
      </p>
      <p>
        Games with Others:
        <%= @user.games.without_gnugo.size %>
      </p>
    </div>
    <% if @user == current_user %>
      <h3><%= link_to "Edit Profile", edit_current_user_path %> or <%= link_to "Log Out", logout_path %></h3>
    <% else %>
      <%= link_to "Challenge to a Game", new_game_path(:username => @user.username), :class => "button" %>
    <% end %>
  </div>
  <div class="column">
    <div id="your_games">
      <h2><%= @user.username %>'s Games</h2>
      <%= render 'games/games_with_video', :games => @games, :game_type => 'your' %>
    </div>
  </div>
  <div class="clear"></div>
</div>
